<div class="container">
	<h2>Welcome to index</h2>
	
	<div class="container">
		<div class="row">
			<% @poems_limit.each do |poem|%>
			<div class="col-md-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title"><%=poem.title%></h3>
					</div>
					<div class="panel-body">
						<%=simple_format(truncate(poem.body, :length =>100)) %>
					</div>
				</div>
				
				<p><%= link_to "View Poem", poem_path(poem)%></p>
				<% @poems.each do |poem| %>
				
				<%= poem.title %> <%= link_to "Show", poem_path(poem) %>				

				<% end %>
				
			</div>
			<% end %>
		</div>
	</div>
</div>